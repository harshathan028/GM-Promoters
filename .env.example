# Server Configuration
PORT=3000
NODE_ENV=development

# Session Secret (generate a random string for production)
SESSION_SECRET=your-super-secret-session-key-change-in-production

# Database Configuration
# Use 'sqlite' for SQLite or 'postgres' for PostgreSQL
DB_TYPE=sqlite

# PostgreSQL Configuration (only needed if DB_TYPE=postgres)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=gm_promoters
DB_USER=postgres
DB_PASSWORD=your_password

# SQLite Configuration (only needed if DB_TYPE=sqlite)
SQLITE_PATH=./database/gm_promoters.db

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=10485760

# Default Admin Credentials (for initial setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin123
ADMIN_EMAIL=admin@gmpromoters.com
